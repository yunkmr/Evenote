<div class="container">
  <div class="row">
    <div class="col-md-10 mx-auto">
      <% if @user_rooms.empty? %>
        <p class="ml-4">メッセージはありません</p>
      <% end %>
      <% @user_rooms.each do |room| %>
        <div class="col-md-8 mx-auto mb-3 border rounded main-caht-room">
          <div class="chat-room-user-name">
            <%= link_to user_path(room.user) do %>
              <%= attachment_image_tag room.user, :profile_image, :fill, 35, 35, fallback: "no-image.jpg", size:'35x35', class: "rounded-circle" %>
              <span class="text-break"><%= room.user.user_name %></span>
            <% end %>
          </div>
          <%= link_to room_path(room.room_id), class: "text-decoration-none" do %>
          <div class="chat-room-text">
            <% if room.chats != [] %>
              <p class="pt-3 ml-3 mb-0 text-dark text-break"><%= room.chats.last.message %></p>
              <div class="small text-muted text-right text-break">
                <span>
                  <% if room.massage_checked %>
                    <i class="fa fa-circle n-circle-index-mail"></i>
                  <% end %>
                </span>
                <%= (room.chats.last).created_at.strftime("%Y/%m/%d %H:%M") %>
              </div>
            <% end %>
          </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>