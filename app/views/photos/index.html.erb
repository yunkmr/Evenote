<div class="container">
  <div class="row">
    <div class="col-md-10 mx-auto">
      <%= link_to event_albums_path(event_id: @album.event_id, album_id: @album.id) do %>
        <i class="fas fa-angle-double-left"></i> アルバム一覧へ
      <% end %>
      <div class="mt-5">
        <%= form_with model: @album, url: event_album_path(id: @album.id, event_id: @album.event_id), local: true do |f| %>
          <div class="form-group row col-md-12">
            <div class="input-box__bottom">
              <div class="input-box__bottom__files">
                <%= f.hidden_field :album_name, value: @album.album_name %>
                <%= f.attachment_field :photos_memory_images, multiple: true %>
              <div class="form-action">
                <%= f.submit '登録する' %>
              </div>
            </div>
          </div>
        <% end %>
<%
=begin %>
        <%= form_with model:@photo,　url:event_album_photos_path, local: true do |f| %>
          <div class="form-group row col-md-12">
            <div class="input-box__bottom">
              <div class="input-box__bottom__files">
                <%= f.attachment_field :photos_images, multiple: true %>
              <div class="form-action">
                <%= f.submit '登録する' %>
              </div>
            </div>
            <div class="input-box__bottom">
              <div class="input-box__bottom__files">
                <%= f.fields_for :photos do |i| %>
                  <%= i.file_field :memory_image_id, multiple: true, name: "photos[memory_image_id][]" %>
                <% end %>
              </div>
              <div class="form-action">
                <%= f.submit '登録する' %>
              </div>
            </div>
          </div>
        <% end %>
<%
=end %>
      </div>
      <!--アルバム一覧-->
      <div class="mt-5">
        <div class="row">
          <% if @photos.present? %>
            <!--<div class="post_files">-->
              <% @photos.each do |photo| %>
                <div class="col-md-3 mt-3">
                  <div class="card h-100">
                    <!--<div class="card-img-top">-->
                    <%= attachment_image_tag(photo, :memory_image, :fill, 200, 200) %>
                    <!--</div>-->
                    <ul class="list-group list-group-flush">
                      <li class="list-group-item">
                        <div class="row">
                          <div class="ml-auto">
                            <%= link_to "/events/#{photo.album.event_id}/albums/#{photo.album_id}/photos/#{photo.id}", method: :delete do %>
                              <span class="mgr-10"><i class="far fa-trash-alt"></i> 削除</span>
                            <% end %>
                          </div>
                        </div>
                      </li>
                    </ul>
                  </div>
                </div>
              <% end %>
            <!--</div>-->
          <% end %>
        </div>
        <div class="row">
          <div class="mx-auto mt-2">
            <%= paginate @photos %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%
=begin %>

<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <div class="post-form">
        <div class="input-box">
          <%= link_to 'イベント詳細画面へ戻る', event_path(@album.event_id) %>
          <%= link_to 'アルバム一覧へ戻る', albums_path %>
          <%= link_to 'アルバムへ戻る', event_albums_path(event_id: @album.event_id, album_id: @album.id)%>
          <%= form_with model:@photo,url:event_album_photos_path, local: true do |f| %>
            <%#= f.text_field :album_name, id: 'textarea', class: 'input-box__content' %>
            <div class="input-box__bottom">
              <div class="input-box__bottom__files">
                <%= f.fields_for :photos do |i| %>
                  <%= i.file_field :memory_image_id, multiple: true, name: "photos[memory_image_id][]" %>
                <% end %>
              </div>
              <div class="form-action">
                <%= f.submit '登録する' %>
