<div class="container">
  <div class="row">
    <div class="col-md-12 mx-auto">
      <!--タブ部分-->
      <div class="row">
        <div class="col-md-2">
          <ul class="tab-list list-unstyled">
            <div class="col-12">
              <%= link_to posts_path do %>
                <li class="tab">
                  ホーム
                </li>
              <% end %>
            </div>
            <div class="col-12">
              <%= link_to post_all_posts_path do %>
                <li class="tab tab-active">
                  検索
                </li>
              <% end %>
            </div>
            <div class="col-12">
              <%= link_to post_mine_posts_path do %>
                <li class="tab">
                  投稿
                </li>
              <% end %>
            </div>
          </ul>
        </div>
        <!--タブで選択された要素部分-->
        <div class="col-md-10">
          <div class="tabbox-contents">
            <div class="tabbox box-show">
              <ul class="sub-tab-list list-unstyled">
                <div class="row">
                  <li class="sub-tab sub-tab-active col-md-4">
                    イベント一覧
                  </li>
                  <input type="button" Value="前のページに戻る" onClick="history.go(-1);">
                </div>
              </ul>
              <div class="tabbox-contents">
                <div class="sub-tabbox sub-box-show">
                  <h3>イベント一覧</h3>
                  <%= render 'posts/event_list', events: @events, tab_id: 3 %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>