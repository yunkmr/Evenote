<table>
  <% post.post_comments.each do |post_comment| %>
    <tr>
      <td>
        <%= link_to users_path(post_comment.user) do %>
          <%= attachment_image_tag(post_comment.user, :profile_image, :fill, 50, 50, fallback:'no-image.jpg', size: '20x20') %><br>
          <%= post_comment.user.user_name %>
        <% end %>
      </td>
      <td><%= post_comment.comment %></td>
      <% if post_comment.user_id == current_user.id %>
        <td><%= link_to 'Destroy', post_post_comment_path(post_comment.post_id, post_comment.id), method: :delete, remote: true, class: 'btn btn-danger btn-sm' %></td>
      <% end %>
    </tr>
  <% end %>
</table>
