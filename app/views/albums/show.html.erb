<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <% if @photos.present? %>
        <div class="post_files">
          <% @photos.each do |file| %>
            <%= image_tag file.memory_image.to_s %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>