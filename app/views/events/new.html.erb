<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <h2 class="mt-2">プロフィール</h2>
      <%= form_with model:@event, local:true do |f| %>
        <div class="form-group">
          <%= f.label :イベント名 %>
          <%= f.text_field :name, class:'name form-control' %>
        </div>
        <div class="form-group col-md-5 mt-2">
          <%= f.label :日付 %>
          <%= f.date_field :date, class:'date form-control' %>
        </div>
        <div class="row mt-2">
          <div class="form-group col-md-4">
            <%= f.label :開場時間 %>
            <%= f.time_field :open_time, class:'open_time form-control' %>
          </div>
          <div class="form-group col-md-4">
            <%= f.label :開演時間 %>
            <%= f.time_field :start_time, class:'start_time form-control' %>
          </div>
          <div class="form-group col-md-4">
            <%= f.label :終演時間 %>
            <%= f.time_field :end_time, class:'end_time form-control' %>
          </div>
        </div>
        <div class="row mt-2">
          <div class="form-group col-md-7">
            <%= f.label :場所 %>
            <%= f.text_field :place, class:'end_time form-control' %>
          </div>
          <div class="form-group col-md-4">
            <%= f.label :座席 %>
            <%= f.text_field :seat, class:'end_time form-control' %>
          </div>
        </div>
        <div class="form-group mt-2">
          <%= f.label :同行者 %>
          <%= f.text_field :seat, class:'end_time form-control' %>
        </div>
        <div class="form-group mt-2">
          <%= f.label :メモ %>
          <%= f.text_area :memo, rows:5, class:'end_time form-control' %>
        </div>
        <div class="form-group mt-2">
          <%= f.label :公開する, class:'col-md-4'  %>
          <%= f.radio_button :release_flg, 0, checked: true %>
          <%= f.label :release_flg, "公開しない", {value: :false, style: "display: inline-block;"} %>
          <%= f.radio_button :release_flg, :true %>
          <%= f.label :release_flg, "公開する", {value: :true, style: "display: inline-block;"} %>
        </div>
        <div class="form-action">
          <%= f.submit '登録する' %>
        </div>
      <% end %>
  </div>
</div>