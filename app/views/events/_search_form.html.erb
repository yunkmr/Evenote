<div class="col-12">
  <%= form_with url: search_events_path, method: :get, local:true do |f| %>
    <!--<div class="form-row col-md-12">-->
    <div class="form-group row">
      <%= f.label :イベント名, class: 'control-label' %>
      <%= f.text_field :keyword, class: 'form-control' %>
    </div>
    <!--</div>-->
    <div class="form-group row">
      <%= f.label :イベント日付, class: 'control-label col-md-5' %>
      <%= f.date_field :date, class: 'form-control col-md-5' %>
    </div>
    <!--<div class="form-row col-md-12">-->
    <div class="form-group row">
      <%= f.label :アーティスト名, class: 'col-md-5 control-label' %>
      <%= f.text_field :artist, class: 'form-control col-md-7' %>
    </div>
    <div class="form-group row">
      <%= f.label :場所, class: 'col-md-5 control-label' %>
      <%= f.text_field :place, class: 'form-control col-md-7' %>
    </div>
    <div class="form-group col-md-3 ml-auto">
      <%= f.submit '検索', class:'submit-btn' %>
    </div>
  <% end %>
</div>