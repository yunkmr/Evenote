<!--# モーダルを取得-->
var modal = document.getElementById('modal-<%= @tab_id %>');
<!--# マスクを取得-->
var mask = document.getElementById('mask-<%= @tab_id %>');

<!--# モーダルの中身をshowビューに置き換えます。-->
modal.innerHTML = '<%= escape_javascript(render partial: 'posts/show', locals: { post: @post, user: @user, post_comments: @post_comments}) %>';


<!--# hiddenクラスを消してモーダルとマスクを表示させます。-->
modal.classList.remove('hidden');
mask.classList.remove('hidden');

<!--# モーダルの外側（マスク）をクリックするとhiddenクラスが書き込まれ、モーダルとマスクが再び非表示となります。-->
mask.addEventListener('click', () => {
  modal.classList.add('hidden');
  mask.classList.add('hidden');
  });