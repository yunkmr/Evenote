<div class="container">
  <div class="row">
    <div class="col-md-12 mx-auto">
      <!--タブ部分-->
      <div class="row">
        <div class="col-md-2">
          <ul class="tab-list list-unstyled">
            <div class="col-12">
              <%= link_to posts_path do %>
                <li class="tab">
                  ホーム
                </li>
              <% end %>
            </div>
            <div class="col-12">
              <%= link_to post_all_posts_path do %>
                <li class="tab">
                  検索
                </li>
              <% end %>
            </div>
            <div class="col-12">
              <%= link_to post_mine_posts_path do %>
                <li class="tab tab-active">
                  投稿
                </li>
              <% end %>
            </div>
          </ul>
        </div>
        <!--タブで選択された要素部分-->
        <div class="col-md-10">
          <div class="tabbox-contents">
            <ul class="sub-tab-list list-unstyled">
              <div class="row col-md-12">
                <li class="sub-tab sub-tab-active col-md-6">
                  投稿する
                </li>
                <li class="sub-tab col-md-6">
                  投稿一覧
                </li>
              </div>
            </ul>
            <div class="tabbox-contents">
              <div class="sub-tabbox sub-box-show">
                <%= render 'posts/post_form', post: @post %>
              </div>
              <div class="sub-tabbox">
                <div id="post_area">
                  <%= render 'posts/post_list_remote', posts: @posts_my, tab_id: 3 %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>