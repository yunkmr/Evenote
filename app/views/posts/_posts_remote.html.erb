<% posts.each do |post| %>
  <%= link_to post_path(id: post, tab_id: tab_id), remote: true do %>
    <%= attachment_image_tag(post, :post_image, class: 'card img-square', size: '200x200') %>
    <% if tab_id == 3 %>
      <%= link_to '編集', post_mine_posts_path(id: post.id) %>
      <%= link_to '削除', post_path(post), method: :delete %>
    <% end %>
  <% end %>
<% end %>
<%= paginate posts, remote: true %>