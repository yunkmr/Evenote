<% users_follow.each do |user| %>
  <div class="row">
    <div class="col-md-3">
      <%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback:'no-image.jpg', size: '50x50') %>
    </div>
    <div class="col-md-5">
      <%= link_to user.user_name, user_path(id: user.id) %>
    </div>
    <div class="col-md-4">
      <div id="follow_form_following_<%= user.id %>">
        <%= render 'relationships/follow_button', user: user %>
      </div>
    </div>
  </div>
<% end %>
<%= paginate users_follow, :param_name => 'page_1', remote: true %>