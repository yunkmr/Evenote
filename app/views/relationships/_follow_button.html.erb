<% unless current_user == user %>
  <% if current_user.following?(user) %>
    <%= link_to "フォロー中", user_relationships_path(user_id: current_user.id, follow_id: user.id), method: :delete, remote: true, data: {"turbolinks" => false}, class: 'btn unfollow_btn' %>
  <% else %>
    <%= link_to "フォローする", user_relationships_path(user_id: current_user.id,follow_id: user.id), method: :post, remote: true, data: {"turbolinks" => false}, class: 'btn follow_btn' %>
  <% end %>
<% end %>
