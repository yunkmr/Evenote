

<%
=begin %>

<% unless current_user == user %>
  <% if current_user.following?(user) %>
    <%= form_for(current_user.relationships.find_by(follow_id: user.id), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :follow_id, user.id %>
      <%= f.submit 'Unfollow', class: 'btn btn-danger btn-block' %>
    <% end %>
  <% else %>
    <%= form_for(current_user.relationships.build) do |f| %>
      <%= hidden_field_tag :follow_id, user.id %>
      <%= f.submit 'Follow', class: 'btn btn-primary btn-block' %>
    <% end %>
  <% end %>
<% end %>
<%
=end %>

<% unless current_user == user %>
  <% if current_user.following?(user) %>
    <%= link_to "フォロー外す", users_relationships_path(follow_id: user.id), method: :delete, remote: true, data: {"turbolinks" => false} %>
  <% else %>
    <%= link_to "フォローする", users_relationships_path(follow_id: user.id), method: :post, remote: true, data: {"turbolinks" => false} %>
  <% end %>
<% end %>
